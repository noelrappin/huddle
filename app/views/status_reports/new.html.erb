<h1>New status_report</h1>

<% form_for(@status_report) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :project %><br />
    <%= f.text_field :project %>
  </p>
  <p>
    <%= f.label :user %><br />
    <%= f.text_field :user %>
  </p>
  <p>
    <%= f.label :yesterday %><br />
    <%= f.text_area :yesterday %>
  </p>
  <p>
    <%= f.label :today %><br />
    <%= f.text_area :today %>
  </p>
  <p>
    <%= f.label :status_date %><br />
    <%= f.date_select :status_date %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', status_reports_path %>
